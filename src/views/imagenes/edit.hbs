<div class="row">
	<div class="col-md-4 offset-md-4">
		<div class="card">
			<div class="card-body">
				<form action="/imagenes/edit/{{imagen._id}}" method="post" enctype="multipart/form-data">
					<label>Nombre:</label>
					<div class="input-group mb-3">
            			<input type="text" name="nombre" value="{{imagen.nombre}}" class="form-control" autofocus/>
					</div>
					<div class="input-group mb-3">
            			<input type="file" name="img" accept="image/*" class="form-control"/>
					</div>
					<button type="submit" class="btn btn-success col-12">
						<i class="bi bi-cloud-arrow-up"></i> Actualizar datos
					</button>
				</form>
			</div>
		</div>
	</div>
</div>

