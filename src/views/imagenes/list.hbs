<div class="row">
	{{#each imagenes}}
		<div class="col-sm-2 mb-3 d-flex justify-content-center">
			<div class="card  text-center" style="width: 18rem;">
				<img src="{{url}}" class="card-img-top">
				<div class="card-body">
					<h5 class="card-title">{{nombre}}</h5>
					<p class="card-text">Tipo de imagen: <code>.{{tipo}}</code></p>
					<a href="{{url}}" class="btn btn-outline-primary mb-1"><i class="bi bi-box-arrow-up-right"></i></a>
					<a href="/imagenes/delete/{{_id}}" class="btn btn-outline-danger mb-1"><i class="bi bi-trash"></i></a>
					<a href="/imagenes/edit/{{_id}}" class="btn btn-outline-warning"><i class="bi bi-pencil-square"></i></a>
				</div>
			</div>
		</div>
	{{/each}}
</div>